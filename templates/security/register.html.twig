{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <h1 class="h3 mb-3 font-weight-normal text-center">Inscription</h1>

                    {% for flash_error in app.flashes('verify_email_error') %}
                        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
                    {% endfor %}

                    {{ form_start(registrationForm) }}
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            {{ form_row(registrationForm.nom) }}
                        </div>
                        <div class="col-md-6 mb-3">
                            {{ form_row(registrationForm.prenom) }}
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            {{ form_row(registrationForm.email) }}
                        </div>
                        <div class="col-md-6 mb-3">
                            {{ form_row(registrationForm.age) }}
                        </div>
                    </div>

                    <div class="mb-3">
                        {{ form_row(registrationForm.num_telephone) }}
                    </div>

                    <div class="mb-3">
                        {{ form_row(registrationForm.userType) }}
                    </div>

                    <div class="mb-3">
                        {{ form_row(registrationForm.plainPassword) }}
                    </div>

                    <div class="d-grid gap-2">
                        <button class="btn btn-lg btn-primary" type="submit">S'inscrire</button>
                    </div>
                    {{ form_end(registrationForm) }}

                    <div class="mt-3 text-center">
                        <p>Déjà un compte ? <a href="{{ path('app_login') }}">Connectez-vous</a></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %} 