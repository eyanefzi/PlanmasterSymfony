{% extends 'base.html.twig' %}

{% block title %}Nos Sponsors{% endblock %}

{% block body %}
    <section class="py-5 bg-light">
        <div class="container px-5">
            <div class="text-center mb-5">
                <h2 class="fw-bolder">Nos Sponsors</h2>
                <p class="lead">D√©couvrez nos partenaires et leurs cadeaux exclusifs.</p>
            </div>

            <!-- Tabs -->
            <ul class="nav nav-tabs mb-4" id="sponsorTabs" role="tablist">
                <li class="nav-item" role="presentation">
                    <button class="nav-link active" id="all-tab" data-bs-toggle="tab" data-bs-target="#all" type="button" role="tab">Tous les Sponsors</button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="favorites-tab" data-bs-toggle="tab" data-bs-target="#favorites" type="button" role="tab">Mes Favoris ‚ù§Ô∏è</button>
                </li>
            </ul>

            <div class="tab-content" id="sponsorTabsContent">
                <!-- All sponsors -->
                <div class="tab-pane fade show active" id="all" role="tabpanel">
                    <div id="allSponsors" class="row gx-4 gx-lg-5 row-cols-1 row-cols-md-2 row-cols-xl-3 justify-content-center">
                        {% for sponsor in sponsors %}
                            <div class="col mb-5 sponsor-card" data-id="{{ sponsor.idSponsor }}">
                                <div class="card h-100 shadow-sm border-0">
                                    <div class="card-body p-4">
                                        <div class="d-flex justify-content-between align-items-start">
                                            <h5 class="card-title fw-bold">{{ sponsor.nomSponsor }}</h5>
                                            <button class="btn btn-link p-0 favorite-btn" data-id="{{ sponsor.idSponsor }}">
                                                <i class="bi bi-heart" style="font-size: 1.5rem; color: red;"></i>
                                            </button>
                                        </div>
                                        <p class="text-muted mb-1"><strong>Type :</strong> {{ sponsor.typeSponsor }}</p>
                                        <p class="mb-3">{{ sponsor.description }}</p>

                                        <div class="bg-light p-3 rounded shadow-sm">
                                            <h6 class="mb-2 text-primary">üéÅ Cadeau associ√©</h6>
                                            <ul class="list-unstyled mb-0">
                                                <li><strong>Nom :</strong> {{ sponsor.idCadeaux.nomCadeaux }}</li>
                                                <li><strong>Type :</strong> {{ sponsor.idCadeaux.typeCadeaux }}</li>
                                                <li><strong>Quantit√© :</strong> {{ sponsor.idCadeaux.quantiteDisponible }}</li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        {% else %}
                            <p class="text-center text-muted">Aucun sponsor trouv√©.</p>
                        {% endfor %}
                    </div>
                </div>

                <!-- Favorites -->
                <div class="tab-pane fade" id="favorites" role="tabpanel">
                    <div id="favoriteSponsors" class="row gx-4 gx-lg-5 row-cols-1 row-cols-md-2 row-cols-xl-3 justify-content-center">
                        <p class="text-center text-muted">Aucun favori pour l'instant.</p>
                    </div>
                </div>
            </div>

        </div>
    </section>

    <script>
        const favorites = new Set();

        document.querySelectorAll('.favorite-btn').forEach(btn => {
            btn.addEventListener('click', function() {
                const sponsorId = this.dataset.id;
                const heartIcon = this.querySelector('i');

                if (favorites.has(sponsorId)) {
                    favorites.delete(sponsorId);
                    heartIcon.classList.remove('bi-heart-fill');
                    heartIcon.classList.add('bi-heart');
                } else {
                    favorites.add(sponsorId);
                    heartIcon.classList.remove('bi-heart');
                    heartIcon.classList.add('bi-heart-fill');
                }

                updateFavoritesTab();
            });
        });

        function updateFavoritesTab() {
            const allSponsors = document.querySelectorAll('.sponsor-card');
            const favoriteContainer = document.getElementById('favoriteSponsors');
            favoriteContainer.innerHTML = '';

            favorites.forEach(id => {
                const sponsorCard = document.querySelector(`.sponsor-card[data-id="${id}"]`);
                if (sponsorCard) {
                    favoriteContainer.appendChild(sponsorCard.cloneNode(true));
                }
            });

            if (favorites.size === 0) {
                favoriteContainer.innerHTML = '<p class="text-center text-muted">Aucun favori pour l\'instant.</p>';
            }
        }
    </script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
{% endblock %}

