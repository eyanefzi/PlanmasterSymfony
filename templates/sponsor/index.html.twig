{% extends 'baseback.html.twig' %}

{% block title %}Liste des Sponsors{% endblock %}

{% block body %}
    <div class="container px-4 px-lg-5 mt-5">
        <div class="card shadow-sm border-0">
            <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center">
                <h3 class="mb-0">Liste des Sponsors</h3>
                <a href="{{ path('app_sponsor_new') }}" class="btn btn-outline-light">
                    <i class="bi bi-plus-circle"></i> Nouveau Sponsor
                </a>
                <a href="{{ path('app_sponsor_statistique') }}" class="btn btn-outline-warning ms-2">
                    <i class="bi bi-pie-chart-fill"></i> Statistiques
                </a>

            </div>
            <div class="card-body">
                <form method="get" class="row g-3 mb-4">
                    <div class="col-md-4">
                        <input type="text" name="nom" value="{{ app.request.query.get('nom') }}" class="form-control"
                               placeholder="Nom du Sponsor">
                    </div>
                    <div class="col-md-4">
                        <input type="text" name="type" value="{{ app.request.query.get('type') }}" class="form-control"
                               placeholder="Type de Sponsor">
                    </div>
                    <div class="col-md-2 d-grid">
                        <button type="submit" class="btn btn-primary"><i class="bi bi-search"></i> Filtrer</button>
                    </div>
                    <div class="col-md-2 d-grid">
                        <a href="{{ path('app_sponsor_index') }}" class="btn btn-secondary"><i
                                    class="bi bi-x-circle"></i> Réinitialiser</a>
                    </div>
                </form>

                <div class="table-responsive">
                    <table class="table table-bordered align-middle text-center">
                        <thead class="table-light">
                        <tr>
                            <th>ID</th>
                            <th>Nom</th>
                            <th>Type</th>
                            <th>Description</th>
                            <th>Actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for sponsor in sponsors %}
                            <tr>
                                <td>{{ sponsor.idSponsor }}</td>
                                <td>{{ sponsor.nomSponsor }}</td>
                                <td>{{ sponsor.typeSponsor }}</td>
                                <td>{{ sponsor.description }}</td>
                                <td>
                                    <a href="{{ path('app_sponsor_show', {'idSponsor': sponsor.idSponsor}) }}"
                                       class="btn btn-sm btn-outline-primary me-1">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    <a href="{{ path('app_sponsor_edit', {'idSponsor': sponsor.idSponsor}) }}"
                                       class="btn btn-sm btn-outline-success">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="5" class="text-muted">Aucun sponsor trouvé</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
