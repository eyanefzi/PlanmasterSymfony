{% extends 'baseback.html.twig' %}

{% block title %}Détails du Sponsor{% endblock %}

{% block body %}
    <div class="container px-4 px-lg-5 mt-5">
        <div class="card shadow-sm border-0 mb-5">
            <div class="card-header bg-dark text-white">
                <h3 class="mb-0">Détails du Sponsor</h3>
            </div>
            <div class="card-body">
                <table class="table table-bordered">
                    <tbody>
                    <tr>
                        <th>ID</th>
                        <td>{{ sponsor.idSponsor }}</td>
                    </tr>
                    <tr>
                        <th>Nom</th>
                        <td>{{ sponsor.nomSponsor }}</td>
                    </tr>
                    <tr>
                        <th>Type</th>
                        <td>{{ sponsor.typeSponsor }}</td>
                    </tr>
                    <tr>
                        <th>Description</th>
                        <td>{{ sponsor.description }}</td>
                    </tr>
                    </tbody>
                </table>

                <div class="d-flex justify-content-between mt-4">
                    <a href="{{ path('app_sponsor_index') }}" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left"></i> Retour à la liste
                    </a>
                    <div>
                        <a href="{{ path('app_sponsor_edit', {'idSponsor': sponsor.idSponsor}) }}" class="btn btn-primary">
                            <i class="bi bi-pencil"></i> Modifier
                        </a>
                        {{ include('sponsor/_delete_form.html.twig', { 'button_class': 'btn btn-danger ms-2' }) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
