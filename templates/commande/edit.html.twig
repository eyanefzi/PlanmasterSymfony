{% extends 'base.html.twig' %}

{% block title %}Modifier la Commande{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="mb-4">✏️ Modifier la Commande</h1>

    <div class="card shadow-sm p-4 rounded">
        {{ include('commande/_form.html.twig', {'button_label': '💾 Mettre à jour'}) }}
    </div>

    <div class="d-flex justify-content-between align-items-center mt-4">
        <a href="{{ path('app_commande_index') }}" class="btn btn-secondary">← Retour à la liste</a>

        <form method="post" action="{{ path('app_commande_delete', {'id': commande.id}) }}"
              onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette commande ?');">
            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ commande.id) }}">
            <button class="btn btn-danger">🗑️ Supprimer</button>
        </form>
    </div>
</div>
{% endblock %}
