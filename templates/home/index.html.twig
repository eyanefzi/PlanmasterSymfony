{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="text-center">
                <h1>Bienvenue sur notre site</h1>
                <p class="lead">Connectez-vous ou inscrivez-vous pour accéder à toutes les fonctionnalités.</p>
                
                {% if not is_granted('IS_AUTHENTICATED_FULLY') %}
                    <div class="mt-4">
                        <a href="{{ path('app_register') }}" class="btn btn-primary me-2">S'inscrire</a>
                        <a href="{{ path('app_login') }}" class="btn btn-outline-primary">Se connecter</a>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
</div>
{% endblock %} 